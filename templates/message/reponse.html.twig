{% extends 'base.html.twig' %}

{% block title %}Reponse{% endblock %}

{% block body %}
<div class="container font"> 
        <h1 class="center">Votre message reçu {{ app.user.firstName }}</h1>
        <table class="table">
                <tbody>
                    <tr>
                        <th>Expéditeur</th>
                        <td>{{ message.expediteur.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ message.titre }}</td>
                    </tr>
                    <tr>
                        <th>Message</th>
                        <td>{{ message.message }}</td>
                    </tr>
                    <tr>
                        <th>Date/heure</th>
                        <td>{{ message.postedAt ? message.postedAt|date('d-m-Y- H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
            <h1 class="center">Rédigez votre reponse</h1>
    {{ include('message/_form_reponse.html.twig') }}

    <a class="btn btn-info" href="{{ path('message_index', {'id': app.user.id}) }}">Retour à vos message</a>
</div>
{% endblock %}
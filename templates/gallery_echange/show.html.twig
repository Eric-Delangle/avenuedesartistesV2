{% extends 'base.html.twig' %}

{% block title %}GalleryEchange
{% endblock %}

{% block body %}
	<div class="container mt-5 text-center">
		<h1>Vos œuvres à l'échange</h1>
		{{dump(gallery_echange)}}
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ gallery_echange.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ gallery_echange.name }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ gallery_echange.slug }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('member_index') }}">Retour à votre espace.</a>

		<a href="{{ path('gallery_echange_edit', {'id': gallery_echange.id}) }}">Modifier</a>


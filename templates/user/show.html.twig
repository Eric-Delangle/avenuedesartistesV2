{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center mt-5">Profil de
			{{ user.firstName }}
			{{ user.lastName }}</h1>

		<table class="table mt-5">
			<tbody>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ user.firstName }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.lastName }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ user.location }}</td>
				</tr>
				<tr>
					<th>Avatar</th>
					<td><img src="{{ asset(['images/avatars/', user.avatar]|join) }}" alt="avatar"></td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ user.description2 }}</td>
				</tr>
				<tr>
					<th>Catégories</th>
					<td>
						{% for item in user.categories %}

							{{ item }}
						{% endfor %}
					</td>
				</tr>
			</tbody>
		</table>

		<button class="btn bouton">
			<a href="{{ path('buy_index') }}">Retour à la liste</a>
		</button>


	</div>
	<script>
		document.getElementById('member').style.display = 'none';
	</script>
	<script>
		document.getElementById('bleudeco').style.display = 'none';
	</script>
	<script>
		document.getElementById('deconnexion').style.display = 'block';
	</script>
	<script>
		document.getElementById('achats').style.display = 'none';
	</script>
	<script>
		document.getElementById('echanges').style.display = 'none';
	</script>
	<script>
		document.getElementById('achat').style.display = 'none';
	</script>
	<script>
		document.getElementById('echange').style.display = 'none';
	</script>
	<script>
		document.getElementById('inscription').style.display = 'none';
	</script>
	<script>
		document.getElementById('connexion').style.display = 'none';
	</script>
	<script>
		document.getElementById('admin').style.display = 'none';
	</script>
{% endblock %}

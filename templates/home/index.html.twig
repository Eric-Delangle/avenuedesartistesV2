{% extends 'base.html.twig' %}

{% block title %}Avenue des artiste | échanges et ventes d'œuvres d'art.
{% endblock %}

{% block body %}
	<div class="container text-center mt-3">
		<h1 class="titre mt-5">Avenue des
			<span class="A_titre">a</span>rtistes</h1>
		<p class="massenet slogan">Pour échanger vos œuvres d'art.</p>

	</div>
	<div
		class="container d-flex flex-row mt-5" id="map_et_diapo">
		{# MAP #}
		<div id="map" class="mt-5 ml-5"></div>


		<div id="infoMember">
			<ul id="listeInfos" class="no_point">
				<li>
					<span id="nomMembre"></span>
				</li>
				<li>
					<span id="categorie"></span>
				</li>
				<li>
					<span id="ville"></span>
				</li>
				<li>
					<span id="profil"></span>
				</li>
			</ul>
		</div>

		{# FIN MAP #}


		{# CAROUSEL #}
		<img class="punaise_map" src="https://avenuedesartistes.com/public/images/punaise.png">
		<div id="carouselExampleControls" class="container carousel slide ml-5" data-ride="carousel">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="https://avenuedesartistes.com/images/texte1.png" alt="First slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="https://avenuedesartistes.com/images/texte3.png" alt="Second slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="https://avenuedesartistes.com/images/texte2.png" alt="Third slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="https://avenuedesartistes.com/images/texte4.png" alt="Third slide">
				</div>
			</div>

		</div>
		{# FIN CAROUSEL #}


	</div>
<script> main();</script>
	<script>
		document.getElementById('inscription').style.display = 'block';
		document.getElementById('connexion').style.display = 'block';
		document.getElementById('admin').style.display = 'none';
		document.getElementById('pas_vu').style.display = 'none';
		document.getElementById('member').style.display = 'none';
		document.getElementById('deconnexion').style.display = 'none';
		document.getElementById('echanges').style.display = 'none';
		document.getElementById('echange').style.display = 'none';
		document.getElementById('achat').style.display = 'none';
		document.getElementById('deco').style.display = 'none';
		document.getElementById('bleudeco').style.display = 'none';
	</script>
	{% if app.user %}
		<script>
			document.getElementById('member').style.display = 'block';
			document.getElementById('bleudeco').style.display = 'block';
			document.getElementById('deco').style.display = 'block';
			document.getElementById('deconnexion').style.display = 'block';
			document.getElementById('echanges').style.display = 'block';
			document.getElementById('inscription').style.display = 'none';
			document.getElementById('connexion').style.display = 'none';
			document.getElementById('admin').style.display = 'none';
		</script>
	{% endif %}


{% extends 'base.html.twig' %}
{% block body %}
	<div class="container">
		<h1 class="titre center">Connexion</h1>
		<br>
		<form action="{{ path('security_login') }}" method="post" class="placeho">
			<div class="form-group">
				{% if error %}
					<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<input placeholder="Votre email" required name="_username" type="text" class="form-control">
			</div>
			<div class="form-group">
				<input placeholder="Votre mot de passe" required name="_password" type="password" class="form-control">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-success">Envoyer</button>
			</div>
		</form>
	</div>
	<script>
		document.getElementById('inscription').style.display = 'none';
	</script>
	<script>
		document.getElementById('connexion').style.display = 'none';
	</script>
	<script>
		document.getElementById('admin').style.display = 'none';
	</script>
	<script>
		document.getElementById('espace_membre').style.display = 'none';
	</script>
	<script>
		document.getElementById('deconnexion').style.display = 'none';
	</script>
	<script>
		document.getElementById('pas_vu').style.display = 'block';
	</script>
{% endblock %}
